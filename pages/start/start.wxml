<view class="container">
    <view class="remind-box" wx:if="{{remind}}">
        <image class="remind-img" src="/static/images/more/loading.gif"></image>
    </view>
    <block wx:else>
        <text class="big_title_text">志愿活动
 together</text>
        <view class="content">
            <view class="hd" style="transform:rotateZ({{angle}}deg);">
                <image class="logo" src="/static/images/more/logo.png"></image>
                <image class="wave" mode="aspectFill" src="/static/images/more/wave.png"></image>
                <image class="wave wave-bg" mode="aspectFill" src="/static/images/more/wave.png"></image>
            </view>
            <view class="bd">
                <button bindgetuserinfo="onGotUserInfo" class="confirm-btn" lang="zh_CN" openType="getUserInfo">
                    <text>立即体验</text>
                </button>
                <text class="copyright">春蕾志愿报名</text>
            </view>
        </view>
    </block>
</view>
