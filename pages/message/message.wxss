.item-wrapper {
    width: 100%;
    overflow: hidden;
    border-top: 1px solid #f4f4f4;
}

.item-list {
    position: relative;
    width: 100%;
    height: 138rpx;
    margin-left: 20rpx;
}

.item-info,.item-oper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1px solid #f4f4f4;
}

.item-info {
    display: flex;
    padding: 20rpx 20rpx 20rpx 0;
    z-index: 2;
    background: white;
    transition: left 0.2s ease-in-out;
}

.item-list:first-child {
    border-top: 1px solid #f4f4f4;
}

.item-oper {
    display: flex;
    justify-content: flex-end;
}

.oper-delete {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    z-index: 1;
    color: white;
    background: red;
}

.info-img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 25rpx;
}

.info-wrapper {
    margin-left: 20rpx;
    width: 588rpx;
}

.info-desc {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 6rpx;
}

.info-desc .name {
    font-size: 32rpx;
    color: black;
    font-weight: 600;
}

.info-desc .time {
    font-size: 24rpx;
    color: #999;
}

.info-content {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 6rpx;
}

.info-content .message {
    font-size: 28rpx;
    color: #bf925c;
    margin-top: 4rpx;
}

.info-content .status {
    font-size: 24rpx;
    color: #bf925c;
}

.info-content .read_1 {
    color: #999;
}

.empty_img {
    height: 115rpx;
    width: 141rpx;
}

.t28rpx {
    font-size: 28rpx;
    line-height: 42rpx;
    color: rgb(142,142,142);
}

.imgitem {
    display: flex;
    justify-content: center;
    margin-top: 73rpx;
}

.txtitem {
